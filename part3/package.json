{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "node --test test/*.js",
    "test:watch": "node --watch --test test/*.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
